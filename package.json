{
	"name": "sprint_1",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"start": "vite",
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint:ts": "eslint ./src --ext .ts,.tsx --max-warnings=0",
		"lint:styles": "stylelint \"src/**/*.{css,scss}\"",
		"type-check": "tsc --noEmit",
		"lint": "npm run lint:ts && npm run lint:styles && npm run type-check",
		"test:mocha:build": "tsc -p tsconfig.mocha.json",
		"test:mocha": "npm run test:mocha:build && mocha \".mocha-dist/**/*.test.js\"",
		"test": "npm run test:mocha",
		"format": "prettier \"src/**/*.{ts,tsx,scss,html}\" --check",
		"format:fix": "prettier \"src/**/*.{ts,tsx,scss,html}\" --write",
		"validate": "npm run lint && npm run test:mocha",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/chai": "^5.2.3",
		"@types/handlebars": "^4.0.40",
		"@types/mocha": "^10.0.10",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"chai": "^6.2.2",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"mocha": "^11.7.5",
		"postcss-scss": "^4.0.9",
		"prettier": "^3.7.2",
		"sass": "^1.94.1",
		"stylelint": "^16.26.1",
		"stylelint-config-standard-scss": "^16.0.0",
		"stylelint-scss": "^6.12.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.1.7",
		"vitest": "^4.0.14"
	},
	"dependencies": {
		"handlebars": "^4.7.8"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"overrides": {
		"diff": "^8.0.2"
	}
}
