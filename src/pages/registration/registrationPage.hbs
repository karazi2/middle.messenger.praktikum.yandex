<main class='registration-page'>
	<h1>Регистрация</h1>

	<form id='registration-form'>

		<div class='registration-form__fields'>
			{{{emailInput}}}
			{{{loginInput}}}
			{{{firstNameInput}}}
			{{{secondNameInput}}}
			{{{phoneInput}}}
			{{{passwordInput}}}
			{{{passwordRepeatInput}}}
		</div>

		{{#if formError}}
			<div class='registration-form__error'>{{formError}}</div>
		{{/if}}

		<div class='registration-form__actions'>
			{{{submitButton}}}
			<a href='/'>Войти</a>
		</div>

	</form>
</main>